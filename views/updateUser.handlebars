<div class="user container" id="fuck">
    <div class="row">
      <div class="col-3 sidebar">
        <ul class="list-group">
          <li class="list-group-item"><a href="/logout">Log Out</a></li>
          <li class="list-group-item"><a href="/calculator">Mortgage Calculator</a></li>
          <li class="list-group-item"><a href="/updateUser">Update User Info</a></li>

      </div>

      
      <div class="col-9 mainbar">
        <form>
          <div id="errMsgUpdate" class="badge badge-danger"></div>
          <br>
          <div class="form-group row">
            <label for="username" class="col-sm-3 col-form-label">Username</label>
            <div class="col-sm-5">
              <input type="text" class="form-control" id="username" placeholder="abc" name="username">
            </div>
          </div>

          <div class="form-group row">
            <label for="email" class="col-sm-3 col-form-label">Email</label>
            <div class="col-sm-5">
              <input type="text" id="email" class="form-control"  placeholder="email@example.com" name="email">
            </div>
          </div>

          <div class="form-group row">
            <label for="phone" class="col-sm-3 col-form-label">Phone</label>
            <div class="col-sm-5">
              <input type="number" id="phone" class="form-control"  placeholder="8-digit HK Phone Number" name="phone">
            </div>
          </div>

           <div class="form-group row">
            <label class="col-sm-3 col-form-label">Gender</label>
            <div class="col-sm-5">
              <select class="form-control" name="gender" id="gender">
                <option>Male</option>
                <option>Female</option>
                <option>Others</option>
              </select>
            </div>
          </div>
          
          <div class="form-group row">
            <label for="salary" class="col-sm-3 col-form-label">Salary</label>
            <div class="col-sm-5">
              <input type="number" id="salary" class="form-control"  placeholder="30000" name="salary">
            </div>
          </div>

          <div class="form-group row">
            <label for="district_current" class="col-sm-3 col-form-label">Current Living District</label>
            <div class="col-sm-5">
              <input type="text" id="district_current" class="form-control" placeholder="e.g. Shatin / Wong Tai Sin" name="district_current">
            </div>
          </div>
          <button class="btn btn-primary" id="updateUser">Update Info</button>
        </form>
              
      </div>
    </div>  
  </div>
  

