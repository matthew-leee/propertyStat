


  <div class="user container" id="fuck">
    <div class="row">
      <div class="col-3 sidebar">
        <ul class="list-group">
          <li class="list-group-item"><a href="/logout">Log Out</a></li>
          <li class="list-group-item"><a href="/calculator">Mortgage Calculator</a></li>
          <li class="list-group-item"><a href="/updateUser">Update User Info</a></li>

      </div>

      <div class="col-9 mainbar">

        <form method="POST" action="/updateUser">
          <div class="form-group row">
            <label for="email" class="col-sm-4 col-form-label">Email</label>
            <div class="col-sm-8">
              <input type="text" id="email" value="{{user.email}}" name="email">
            </div>
          </div>

          <div class="form-group row">
            <label for="username" class="col-sm-4 col-form-label">Username</label>
            <div class="col-sm-8">
              <input type="text" id="username" value="{{user.username}}" name="username">
            </div>
          </div>

          <div class="form-group row">
            <label for="phone" class="col-sm-4 col-form-label">Phone</label>
            <div class="col-sm-8">
              <input type="number" id="phone" value="{{user.phone}}" name="phone">
            </div>
          </div>

           <div class="form-group row">
            <label class="col-sm-4 col-form-label">Gender</label>
            <div class="col-sm-8">
              <select class="form-control" name="gender">
                <option>Male</option>
                <option>Female</option>
              </select>
            </div>
          </div>
          
          <div class="form-group row">
            <label for="salary" class="col-sm-4 col-form-label">Salary</label>
            <div class="col-sm-8">
              <input type="number" id="salary" value="{{user.salary}}" name="salary">
            </div>
          </div>

          <div class="form-group row">
            <label for="district_current" class="col-sm-4 col-form-label">Current Living District</label>
            <div class="col-sm-8">
              <input type="text" id="email" value="{{user.district_current}}" name="district_current">
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Update Info</button>
        </form>

        
      </div>
    </div>  
  </div>
  
