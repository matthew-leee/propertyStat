<form method="POST" action="/updateUser">
  <div class="form-group row">
    <label for="email" class="col-sm-4 col-form-label">Email</label>
    <div class="col-sm-8">
      <input type="text" id="email" placeholder="email@example.com" name="email">
    </div>
  </div>

  <div class="form-group row">
    <label for="username" class="col-sm-4 col-form-label">Username</label>
    <div class="col-sm-8">
      <input type="text" id="username" placeholder="abc" name="username">
    </div>
  </div>

  <div class="form-group row">
    <label for="phone" class="col-sm-4 col-form-label">Phone</label>
    <div class="col-sm-8">
      <input type="number" id="phone" placeholder="8-digit HK Phone Number" name="phone">
    </div>
  </div>

   <div class="form-group row">
    <label class="col-sm-4 col-form-label">Gender</label>
    <div class="col-sm-8">
      <select class="form-control" name="gender">
			  <option>Male</option>
			  <option>Female</option>
			</select>
    </div>
  </div>
  
  <div class="form-group row">
    <label for="salary" class="col-sm-4 col-form-label">Salary</label>
    <div class="col-sm-8">
      <input type="number" id="salary" placeholder="100000" name="salary">
    </div>
  </div>

  <div class="form-group row">
    <label for="district_current" class="col-sm-4 col-form-label">Current Living District</label>
    <div class="col-sm-8">
      <input type="text" id="email" placeholder="e.g. Shatin / Wong Tai Sin" name="district_current">
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Update Info</button>
</form>

